
@{
    ViewData["Title"] = "PointAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="card"> 
    <div class="card-body"> 
        <div class="card-px text-center pt-15 pb-15"> 
            <h2 class="fs-2x fw-bolder mb-0 text-uppercase text-success" >Puan Yükleme Noktası</h2>
       
            <form id="point_add_form" class="form" action="#" enctype="multipart/form-data">
                <div class="fv-row mb-10">
                    <input type="file" class="form-control mb-2 mt-2" name="excel_file" id="customFile">
                </div>
                <button id="submitPointExcelFile" type="submit" class="btn btn-info er fs-6 px-8 py-4 mt-4">
                    <span class="indicator-label">
                        Puan Yükle
                    </span>
                    <span class="indicator-progress">
                        Lütfen Bekleyiniz... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
                <a href="@Url.Action("FileDownload","Excel",new{type="Point"})" type="button" class="btn btn-success er fs-6 px-8 py-4 mt-4">
                    <span class="indicator-label">
                        Şablon İndir
                    </span>
                     
                </a>
            </form> 
        </div>
          
        <div class="text-center pb-15 px-5">
            <img src="~/assets/media/illustrations/sketchy-1/4.png" alt="" class="mw-100 h-200px h-sm-325px">
        </div> 
    </div> 
</div>
